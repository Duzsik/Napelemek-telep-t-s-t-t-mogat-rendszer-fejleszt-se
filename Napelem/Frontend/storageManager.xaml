<Window x:Class="Napelem.storageManager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Napelem"
        ResizeMode="NoResize"
        mc:Ignorable="d"
        Title="Storage Manager" Height="450" Width="600">
    <Grid Background="#FF1B1919" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <TabControl HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <TabItem Header="Main table">
                <Grid Background="#FF1B1919" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <Label Content="Warehouse manager main" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold" Foreground="White"/>
                    <Button Style="{StaticResource RoundeButtonTemplate}" Name="mainExitBtn" Content="Exit" HorizontalAlignment="Left" Margin="10,0,0,10" VerticalAlignment="Bottom" RenderTransformOrigin="-0.089,1.096" Height="25" Width="60" FontSize="16" FontWeight="Bold" Click="mainExitBtn_Click"/>
                    <Label Content="Hiányzó alkatreszek:" HorizontalAlignment="Left" Margin="228,15,0,0" VerticalAlignment="Top" Foreground="White"/>
                    <Label Content="Hiányzó de már lefoglalt alkatreszek:" HorizontalAlignment="Left" Margin="366,17,0,0" VerticalAlignment="Top" Foreground="White"/>
                    <CheckBox HorizontalAlignment="Left" Margin="345,22,0,0" VerticalAlignment="Top"/>
                    <CheckBox HorizontalAlignment="Left" Margin="570,23,0,0" VerticalAlignment="Top"/>
                    <Grid Width="580" Height="300">
                        <DataGrid d:ItemsSource="{d:SampleData ItemCount=5}"/>

                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Header="New assets">
                <Grid Background="#FF1B1919" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="78*"/>
                        <ColumnDefinition Width="8*"/>
                        <ColumnDefinition Width="211*"/>
                    </Grid.ColumnDefinitions>
                    <TextBox Name="assetNameTextBox" Margin="47,75,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="150" Height="25" HorizontalAlignment="Left" Grid.Column="2">
                        <TextBox.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </TextBox.Resources>

                    </TextBox>
                    <Label Content="Name" Foreground="White" HorizontalAlignment="Left" Margin="48,49,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold" Grid.Column="2" />
                    <Label Content="Price" Foreground="White" HorizontalAlignment="Left" Margin="48,100,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold" Grid.Column="2" />
                    <TextBox Name="assetPriceTextBox" Margin="50,129,222,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="150" Height="25" Grid.Column="2">
                        <TextBox.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>
                    <Label Content="Max quantity" Foreground="White" HorizontalAlignment="Left" Margin="48,154,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold" Grid.Column="2" />
                    <TextBox Margin="50,183,222,0" Name="assetMaxTextBox" TextWrapping="Wrap"  VerticalAlignment="Top" Width="150" Height="25" Grid.Column="2">
                        <TextBox.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>
                    <Button Style="{StaticResource RoundeButtonTemplate}" Content="Add new asset" HorizontalAlignment="Left" Margin="15,248,0,0" VerticalAlignment="Top" Width="220" Height="25" FontSize="16" FontWeight="Bold" Click="addItem" Grid.Column="2" />
                </Grid>
            </TabItem>
            <TabItem Header="Intake">
                <Grid Background="#FF1B1919">
                    <TextBox x:Name="textBoxRow" HorizontalAlignment="Left" Margin="216,169,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="150" Height="25">
                        <TextBox.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>
                    <Label Content="Sor" Foreground="White" HorizontalAlignment="Left" Margin="214,141,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold" />
                    <Label Content="Oszlop" Foreground="White" HorizontalAlignment="Left" Margin="214,191,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold" />
                    <TextBox HorizontalAlignment="Left" x:Name="textBoxColumn" Margin="217,221,0,0" TextWrapping="Wrap" Width="150" Height="25" VerticalAlignment="Top">
                        <TextBox.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </TextBox.Resources>

                    </TextBox>
                    <Label Content="Szint" Foreground="White" HorizontalAlignment="Left" Margin="214,245,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold" />
                    <TextBox HorizontalAlignment="Left" Margin="217,275,0,0" x:Name="textBoxLevel" TextWrapping="Wrap" Width="150" Height="25" VerticalAlignment="Top">
                        <TextBox.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </TextBox.Resources>

                    </TextBox>
                    <ComboBox x:Name="ProductComboBox_Copy" HorizontalAlignment="Left" Margin="217,115,0,0" VerticalAlignment="Top" Width="150" Height="25"/>
                    <Label Content="Product" Foreground="White" HorizontalAlignment="Left" Margin="260,77,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold"/>
                    <Button Style="{StaticResource RoundeButtonTemplate}" Content="Intake" HorizontalAlignment="Center" Margin="0,328,0,0" VerticalAlignment="Top" Width="220" Height="25" FontSize="16" FontWeight="Bold" Click="SetStorageClick" />
                </Grid>
            </TabItem>
            <TabItem Header="Customize assets">
                <Grid Background="#FF1B1919" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="91*"/>
                        <ColumnDefinition Width="503*"/>
                    </Grid.ColumnDefinitions>
                    <ComboBox Name="ProductComboBox" HorizontalAlignment="Left" Margin="131,89,0,0" VerticalAlignment="Top" Width="150" Height="25" Grid.Column="1"/>
                    <Label Content="Product" Foreground="White" HorizontalAlignment="Left" Margin="171,53,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold" Grid.Column="1"/>
                    <TextBox Name="NewPriceTextBox" HorizontalAlignment="Left" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="150" Height="25" Grid.Column="1" Margin="131,156,0,0">
                        <TextBox.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>
                    <Label Content="New price" Foreground="White" HorizontalAlignment="Left" Margin="163,119,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold" RenderTransformOrigin="0.576,1.706" Grid.Column="1"/>
                    <Button Style="{StaticResource RoundeButtonTemplate}" Content="Change asset detail" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="16" Margin="120,284,0,0" FontWeight="Bold" Grid.Column="1" Click="changePrice_Quantity_Btn" Width="171"/>
                    <TextBox x:Name="NewPriceTextBox_Copy" HorizontalAlignment="Left" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="150" Height="25" Grid.Column="1" Margin="130,234,0,0">
                        <TextBox.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>
                    <Label Content="New maximum quantity" Foreground="White" HorizontalAlignment="Left" Margin="110,198,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold" RenderTransformOrigin="0.576,1.706" Grid.Column="1"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
