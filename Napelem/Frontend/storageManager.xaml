<Window x:Class="Napelem.storageManager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Napelem"
        ResizeMode="NoResize"
        mc:Ignorable="d"
        Title="Storage Manager" Height="450" Width="600">
    <Grid Background="#FF1B1919" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <TabControl HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <TabItem Header="Main table">
                <Grid Background="#FF1B1919" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <Label Content="Warehouse manager main" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold" Foreground="White"/>
                    <Button Name="mainExitBtn" Content="Exit" HorizontalAlignment="Left" Margin="10,0,0,10" VerticalAlignment="Bottom" RenderTransformOrigin="-0.089,1.096" Height="25" Width="60" FontSize="16" FontWeight="Bold" Click="mainExitBtn_Click"/>
                    <Label Content="Hiányzó alkatreszek:" HorizontalAlignment="Left" Margin="228,15,0,0" VerticalAlignment="Top" Foreground="White"/>
                    <Label Content="Hiányzó de már lefoglalt alkatreszek:" HorizontalAlignment="Left" Margin="366,17,0,0" VerticalAlignment="Top" Foreground="White"/>
                    <CheckBox HorizontalAlignment="Left" Margin="345,22,0,0" VerticalAlignment="Top"/>
                    <CheckBox HorizontalAlignment="Left" Margin="570,23,0,0" VerticalAlignment="Top"/>
                    <Grid Width="580" Height="300">
                        <DataGrid d:ItemsSource="{d:SampleData ItemCount=5}"/>

                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Header="New assets">
                <Grid Background="#FF1B1919" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>
                    <TextBox Name="assetNameTextBox" HorizontalAlignment="Left" Margin="74,71,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="150" Height="25" Grid.ColumnSpan="2"/>
                    <Label Content="Name" Foreground="White" HorizontalAlignment="Left" Margin="74,45,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold" />
                    <Label Content="Price" Foreground="White" HorizontalAlignment="Left" Margin="74,96,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold" />
                    <TextBox HorizontalAlignment="Left" Name="assetPriceTextBox" Margin="77,125,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="150" Height="25" Grid.ColumnSpan="2" />
                    <Label Content="Max quantity" Foreground="White" HorizontalAlignment="Left" Margin="74,150,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold" />
                    <TextBox HorizontalAlignment="Left" Margin="77,179,0,0" Name="assetMaxTextBox" TextWrapping="Wrap"  VerticalAlignment="Top" Width="150" Height="25" Grid.ColumnSpan="2" />
                    <Button Content="Add new asset" HorizontalAlignment="Left" Margin="36,250,0,0" VerticalAlignment="Top" Width="126" Height="25" FontSize="16" FontWeight="Bold" Click="addItem" Grid.Column="1" />
                    <TextBox x:Name="assetNameTextBox_Copy" HorizontalAlignment="Left" Margin="169,71,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="150" Height="25" Grid.Column="1"/>
                    <Label Content="Sor" Foreground="White" HorizontalAlignment="Left" Margin="169,45,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold" Grid.Column="1" />
                    <Label Content="Oszlop" Foreground="White" HorizontalAlignment="Left" Margin="169,96,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold" Grid.Column="1" />
                    <TextBox HorizontalAlignment="Left" x:Name="assetPriceTextBox_Copy" Margin="172,125,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="150" Height="25" Grid.Column="1" />
                    <Label Content="Szint" Foreground="White" HorizontalAlignment="Left" Margin="169,150,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold" Grid.Column="1" />
                    <TextBox HorizontalAlignment="Left" Margin="172,179,0,0" x:Name="assetMaxTextBox_Copy" TextWrapping="Wrap"  VerticalAlignment="Top" Width="150" Height="25" Grid.Column="1" />
                </Grid>
            </TabItem>
            <TabItem Header="Customize assets">
                <Grid Background="#FF1B1919" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="91*"/>
                        <ColumnDefinition Width="503*"/>
                    </Grid.ColumnDefinitions>
                    <ComboBox Name="ProductComboBox" HorizontalAlignment="Left" Margin="131,89,0,0" VerticalAlignment="Top" Width="150" Height="25" Grid.Column="1"/>
                    <Label Content="Product" Foreground="White" HorizontalAlignment="Left" Margin="171,53,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold" Grid.Column="1"/>
                    <TextBox Name="NewPriceTextBox" HorizontalAlignment="Left" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="150" Height="25" Grid.Column="1" Margin="131,156,0,0" TextChanged="NewPriceTextBox_TextChanged1"/>
                    <Label Content="New price" Foreground="White" HorizontalAlignment="Left" Margin="163,119,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold" RenderTransformOrigin="0.576,1.706" Grid.Column="1"/>
                    <Button Content="Change asset detail" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="16" Margin="120,284,0,0" FontWeight="Bold" Grid.Column="1" Click="changePrice_Quantity_Btn" Width="171"/>
                    <TextBox x:Name="NewPriceTextBox_Copy" HorizontalAlignment="Left" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="150" Height="25" Grid.Column="1" Margin="130,234,0,0" TextChanged="NewPriceTextBox_TextChanged2"/>
                    <Label Content="New maximum quantity" Foreground="White" HorizontalAlignment="Left" Margin="110,198,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold" RenderTransformOrigin="0.576,1.706" Grid.Column="1"/>
                </Grid>
            </TabItem>

        </TabControl>

    </Grid>
</Window>
